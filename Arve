#!/usr/bin/python
# coding: latin-1
print '{:^40}'.format('Arve')
print '{:<20}'.format('Arve saaja'), '{:>20}'.format('Arve valjastaja')
print '{:<20}'.format('Eesnimi Perenimi'), '{:>20}'.format('Eesnimi Perenimi')
print '{:<20}'.format('Aadress'), '{:>20}'.format('Aadress')
fmt = '{:20} {:10} {:10}'
print fmt.format('Nimetus', 'Kogus', 'Summa')
print '{:-^40}'.format('-')
print '{:<20}'.format('Arve number'), '{:>20}'.format('1')
print '{:<20}'.format('Arve kuupÃ¤ev'), '{:>20}'.format('05.10.2012')
print '{:<20}'.format('Swedbank: 2210203030304')
print '{:<20}'.format('Telefoninumber: 567393484')
