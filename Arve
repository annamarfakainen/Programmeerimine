print '{:^40}'.format('Arve')
print '{:<20}'.format('Arve saaja'), '{:>20}'.format('Arve valjastaja')
print '{:<20}'.format('Eesnimi Perenimi'), '{:>20}'.format('Eesnimi Perenimi')
print '{:<20}'.format('Aadress'), '{:>20}'.format('Aadress')
fmt = '{:20} {:10} {:10}'
print fmt.format('NImetus', 'Kogus', 'Summa')
print '{:>20}'.format('Arve number'), '{:>04}'.format('1')
print '{:>20}'.format('Arve kuupäev'), '{:>20}'.format('05.10.2012´)
